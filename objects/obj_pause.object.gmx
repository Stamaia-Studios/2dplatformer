          <argument>
            <kind>1</kind>
            <string>/// Menu control
if (global.pause) {
    // Move down menu
    if (keyboard_check_pressed(vk_down)) {
        if (menu_index &lt; array_length_1d(option) - 1) {
            menu_index++;
        }else{
            menu_index = 0;
        }
    }
    // Move up menu
    if (keyboard_check_pressed(vk_up)) {
        if (menu_index &gt; 0) {
            menu_index--;
        }else{
            menu_index = array_length_1d(option) - 1;
        }
    }
    // Select menu item
    if (keyboard_check_pressed(vk_enter)) {
        if option[menu_index] = "Return" {
            global.pause = !global.pause;
        }else if option[menu_index] = "Quit" {
            game_end();
        }
    }
}
</string>
